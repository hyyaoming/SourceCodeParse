<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="#cccccc"
        android:gravity="center"
        android:text="@string/anim" />

    <org.lym.sourcecodeparse.source.parse.anim.MoneyNumberTextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="#00fff0"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/moneyAnim"
        android:textColor="#0f0f0f"
        android:textSize="16sp" />

    <org.lym.sourcecodeparse.source.parse.anim.PointView
        android:id="@+id/pointView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


</LinearLayout>