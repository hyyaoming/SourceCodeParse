<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/rv_multiple_item_new_iv"
            android:layout_width="@dimen/news_icon_width"
            android:layout_height="@dimen/news_icon_height"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/rv_multiple_item_new_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/rv_multiple_item_new_iv"
            android:layout_toEndOf="@id/rv_multiple_item_new_iv"
            android:layout_toRightOf="@id/rv_multiple_item_new_iv"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/rv_multiple_item_new_tv_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/rv_multiple_item_new_iv"
            android:layout_toEndOf="@id/rv_multiple_item_new_iv"
            android:layout_toRightOf="@id/rv_multiple_item_new_iv"
            android:textColor="#6A584C"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/rv_multiple_item_new_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/rv_multiple_item_new_iv"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#6A584C"
            android:textSize="13sp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>